@@@ multitext header
@@@ vertex shader
#version 430 core
layout (location = 0) in vec3 position;
layout (location = 1) in vec2 texcoords;
out vec2 v_texcoords;
uniform mat4 mvp;
void main() {
    gl_Position = mvp * vec4(position, 1.0);
    v_texcoords = texcoords;
}

@@@ fragment shader
#version 430 core
in vec2 v_texcoords;
uniform sampler2D utexture;
out vec4 f_color;
void main() {
    f_color = texture2D(utexture, v_texcoords);
}
